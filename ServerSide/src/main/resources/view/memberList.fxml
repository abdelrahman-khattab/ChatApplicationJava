<BorderPane styleClass="vBox" stylesheets="@Styles/chatStyle.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.iti.project.presentation.controllers.MemberListController">
   <center>
      <HBox style="-fx-background-color: #36404A;" BorderPane.alignment="CENTER">
         <children>
            <VBox styleClass="vBox" stylesheets="@Styles/chatStyle.css">
            <children>
            <HBox alignment="CENTER_LEFT">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
               <children>
                  <Label prefHeight="51.0" prefWidth="395.0" styleClass="headerFont" stylesheets="@Styles/chatStyle.css" text="Members" textFill="#181d31" />
                  <Button fx:id="addMember" mnemonicParsing="false" style="-fx-background-color: transparent;">
                     <graphic>
                        <ImageView fx:id="addUser" fitHeight="26.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../addFriend.png" />
                           </image>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
                  <HBox alignment="CENTER_LEFT" fillHeight="false" stylesheets="@../../../../../ClientSide/src/main/resources/view/Styles/chatStyle.css">
                     <children>
                        <Button mnemonicParsing="false" prefHeight="42.0" prefWidth="38.0" style="-fx-background-color: #00000000;">
                           <graphic>
                              <ImageView fitHeight="33.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../../../../ClientSide/src/main/resources/images/search.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <TextField fx:id="searchBar1" prefHeight="35.0" promptText="Search users" stylesheets="@../../../../../ClientSide/src/main/resources/view/Styles/chatStyle.css">
                           <styleClass>
                              <String fx:value="transparent-bg" />
                              <String fx:value="radius" />
                              <String fx:value="searchFontColor" />
                           </styleClass>
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                     <styleClass>
                        <String fx:value="radius" />
                        <String fx:value="transparent-bg" />
                     </styleClass>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" pannable="true" styleClass="vBox" stylesheets="@Styles/chatStyle.css" vbarPolicy="NEVER">
               <content>
                  <VBox prefHeight="650.0" styleClass="vBox" stylesheets="@Styles/chatStyle.css">
                     <children>
                        <HBox fx:id="memberHBox" alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="350.0" stylesheets="@Styles/chatStyle.css">
                           <children>
                              <AnchorPane nodeOrientation="LEFT_TO_RIGHT" prefHeight="70.0" prefWidth="53.0">
                                 <children>
                                    <Circle fx:id="memberImage" fill="WHITE" layoutX="20.0" layoutY="34.0" radius="19.0" stroke="WHITE" strokeType="INSIDE" />
                                 </children>
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin>
                              </AnchorPane>
                              <VBox alignment="CENTER_LEFT" prefHeight="70.0">
                                 <children>
                                    <HBox>
                                       <children>
                                          <Label fx:id="memberName" prefHeight="26.0" prefWidth="343.0" stylesheets="@Styles/chatStyle.css" text="Patrick Hendricks">
                                             <font>
                                                <Font size="25.0" />
                                             </font>
                                             <styleClass>
                                                <String fx:value="messagerHeader" />
                                                <String fx:value="textColor" />
                                             </styleClass>
                                             <HBox.margin>
                                                <Insets />
                                             </HBox.margin>
                                          </Label>
                                          <Button fx:id="editMember" mnemonicParsing="false" style="-fx-background-color: transparent;">
                                             <graphic>
                                                <ImageView fitHeight="26.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
                                                   <image>
                                                      <Image url="@Images/edit.png" />
                                                   </image>
                                                         <cursor>
                                                            <Cursor fx:constant="HAND" />
                                                         </cursor>
                                                </ImageView>
                                             </graphic>
                                          </Button>
                                       </children>
                                       <VBox.margin>
                                          <Insets bottom="-10.0" />
                                       </VBox.margin>
                                    </HBox>
                                    <Label fx:id="memberLocation" prefHeight="6.0" prefWidth="212.0" stylesheets="@Styles/chatStyle.css" text="Location">
                                       <styleClass>
                                          <String fx:value="textColor" />
                                          <String fx:value="message" />
                                       </styleClass>
                                    </Label>
                                 </children>
                              </VBox>
                           </children>
                                 <styleClass>
                                    <String fx:value="vBox" />
                                    <String fx:value="hBox" />
                                 </styleClass>
                        </HBox>
                        <Button mnemonicParsing="false" style="-fx-background-color: transparent;" />
                     </children>
                  </VBox>
               </content>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </ScrollPane>
            </children>
            <padding>
            <Insets left="30.0" right="30.0" top="10.0" />
            </padding>
            </VBox>
         </children>
      </HBox>
