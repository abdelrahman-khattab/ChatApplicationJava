<ScrollPane fitToHeight="true" fitToWidth="true" styleClass="notificationBg" stylesheets="@Styles/chatStyle.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.iti.project.presentation.controllers.MemberListController">
   <content>
      <HBox alignment="CENTER" styleClass="notificationBg" stylesheets="@Styles/chatStyle.css">
         <children>
            <HBox alignment="CENTER" style="-fx-background-radius: 40; -fx-background-radius: 40;" styleClass="radius" stylesheets="@Styles/chatStyle.css">
               <children>
                  <VBox minWidth="300.0" prefWidth="400.0" style="-fx-background-radius: 20;" styleClass="vBox" stylesheets="@Styles/chatStyle.css" HBox.hgrow="ALWAYS">
                  <children>
                  <HBox alignment="CENTER_LEFT">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                     <children>
                        <Label prefHeight="51.0" prefWidth="395.0" styleClass="headerFont" stylesheets="@Styles/chatStyle.css" text="Members" textFill="#181d31" />
                        <Button fx:id="addMember" mnemonicParsing="false" style="-fx-background-color: transparent;">
                           <graphic>
                              <ImageView fx:id="addUser" fitHeight="26.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../addFriend.png" />
                                 </image>
                                       <cursor>
                                          <Cursor fx:constant="HAND" />
                                       </cursor>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
                        <HBox alignment="CENTER_LEFT" fillHeight="false" stylesheets="@../../../../../ClientSide/src/main/resources/view/Styles/chatStyle.css">
                           <children>
                              <Button mnemonicParsing="false" prefHeight="42.0" prefWidth="38.0" style="-fx-background-color: #00000000;">
                                 <graphic>
                                    <ImageView fitHeight="33.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@Images/magnifying-glass.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                              <TextField fx:id="searchBar" prefHeight="35.0" promptText="Search users" stylesheets="@../../../../../ClientSide/src/main/resources/view/Styles/chatStyle.css">
                                 <styleClass>
                                    <String fx:value="transparent-bg" />
                                    <String fx:value="radius" />
                                    <String fx:value="searchFontColor" />
                                 </styleClass>
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                           </children>
                           <styleClass>
                              <String fx:value="radius" />
                              <String fx:value="transparent-bg" />
                           </styleClass>
                           <padding>
                              <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                           </padding>
                        </HBox>
                        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" minWidth="220.0" pannable="true" prefWidth="250.0" styleClass="vBox" vbarPolicy="NEVER">
                           <content>
                              <VBox nodeOrientation="LEFT_TO_RIGHT" spacing="5.0" styleClass="vBox" stylesheets="@../../../../../ClientSide/src/main/resources/view/Styles/chatStyle.css">
                                 <children>
                                    <ListView fx:id="membersLV" minWidth="220.0" prefWidth="250.0" styleClass="vBox" stylesheets="@Styles/listStyle.css" VBox.vgrow="ALWAYS" />
                                 </children>
                              </VBox>
                           </content>
                           <VBox.margin>
                              <Insets top="50.0" />
                           </VBox.margin>
                        </ScrollPane>
                  </children>
                  <padding>
                  <Insets left="30.0" right="30.0" top="10.0" />
                  </padding>
                  </VBox>
                  <Separator orientation="VERTICAL" prefHeight="200.0" />
                  <VBox fx:id="editVBox" minWidth="500.0" prefWidth="500.0" style="-fx-background-radius: 20;" styleClass="vBox" stylesheets="@Styles/chatStyle.css" HBox.hgrow="ALWAYS">
                     <padding>
                        <Insets left="20.0" right="30.0" top="10.0" />
                     </padding>
                     <children>
                        <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="566.0">
                           <children>
                              <Label alignment="CENTER" prefHeight="50.0" styleClass="headerFont" text="Edit Contact Data" textFill="#e1e9f1">
                                 <font>
                                    <Font name="SansSerif Bold" size="22.0" />
                                 </font>
                              </Label>
                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" top="5.0" />
                           </VBox.margin>
                        </HBox>
                        <VBox spacing="5.0">
                           <children>
                              <HBox alignment="CENTER" VBox.vgrow="SOMETIMES">
                                 <children>
                                    <AnchorPane maxWidth="100.0" minHeight="80.0" minWidth="100.0" prefWidth="100.0">
                                       <children>
                                          <AnchorPane layoutX="-4.0" layoutY="-2.0" prefHeight="110.0" prefWidth="110.0" style="-fx-background-color: white; -fx-background-radius: 100; -fx-border-radius: 50;">
                                             <children>
                                                <ImageView fx:id="memberImage" fitHeight="110.0" fitWidth="110.0" pickOnBounds="true" preserveRatio="true" />
                                             </children>
                                          </AnchorPane>
                                          <Button fx:id="uploadImageBtn" layoutX="62.0" layoutY="64.0" mnemonicParsing="false" onAction="#uploadImage" prefHeight="40.0" prefWidth="40.0" style="-fx-background-radius: 30;" styleClass="secondBGcolor">
                                             <graphic>
                                                <ImageView fitHeight="33.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
                                                   <image>
                                                      <Image url="@Images/edit.png" />
                                                   </image>
                                                </ImageView>
                                             </graphic>
                                          </Button>
                                       </children>
                                    </AnchorPane>
                                 </children>
                              </HBox>
                              <Label styleClass="tfinputHeader" text="Name" textFill="#9aa1b9">
                                 <font>
                                    <Font name="Serif Bold" size="16.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets left="5.0" />
                                 </VBox.margin>
                              </Label>
                              <TextField fx:id="userName" onKeyTyped="#enterUserName" prefHeight="40.0" promptText="username" styleClass="tfinput" VBox.vgrow="ALWAYS">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                              <Label layoutX="10.0" layoutY="10.0" styleClass="tfinputHeader" text="Mobile" textFill="#9aa1b9">
                                 <font>
                                    <Font name="Serif Bold" size="16.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets left="5.0" />
                                 </VBox.margin>
                              </Label>
                              <TextField fx:id="phoneNo" layoutX="10.0" layoutY="98.0" onKeyTyped="#enterPhoneNumber" prefHeight="40.0" promptText="Phone Number" styleClass="tfinput" VBox.vgrow="ALWAYS">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                              <Label layoutX="10.0" layoutY="27.0" styleClass="tfinputHeader" text="Email" textFill="#9aa1b9">
                                 <font>
                                    <Font name="Serif Bold" size="16.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets left="5.0" />
                                 </VBox.margin>
                              </Label>
                              <TextField fx:id="eMail" onKeyTyped="#enterEmail" prefHeight="40.0" promptText="email" styleClass="tfinput">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                              <Label layoutX="10.0" layoutY="27.0" styleClass="tfinputHeader" text="Country" textFill="#9aa1b9">
                                 <font>
                                    <Font name="Serif Bold" size="16.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets left="5.0" top="10.0" />
                                 </VBox.margin>
                              </Label>
                              <ComboBox fx:id="countryComboBox" editable="true" promptText="Choose Country" style="-fx-prompt-fill: white;" styleClass="btnGender" />
                              <Label layoutX="10.0" layoutY="95.0" styleClass="tfinputHeader" text="Gender" textFill="#9aa1b9">
                                 <font>
                                    <Font name="Serif Bold" size="16.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets left="5.0" top="10.0" />
                                 </VBox.margin>
                              </Label>
                              <ComboBox fx:id="genderComboBox" editable="true" promptText="Choose Gender" style="-fx-prompt-fill: white;" styleClass="btnGender" />
                              <Label layoutX="10.0" layoutY="148.0" styleClass="tfinputHeader" text="Date Of Birth" textFill="#9aa1b9">
                                 <font>
                                    <Font name="Serif Bold" size="16.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets left="5.0" top="10.0" />
                                 </VBox.margin>
                              </Label>
                              <DatePicker fx:id="birthDate" editable="false" onAction="#enterBirthDate" styleClass="btnGender" />
                              <Label layoutX="10.0" layoutY="286.0" styleClass="tfinputHeader" text="BIO" textFill="#9aa1b9">
                                 <font>
                                    <Font name="Serif Bold" size="16.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets left="5.0" top="10.0" />
                                 </VBox.margin>
                              </Label>
                              <TextArea fx:id="clientBioTextArea" prefHeight="66.0" promptText="Client Bio" styleClass="tfBox" VBox.vgrow="ALWAYS">
                                 <VBox.margin>
                                    <Insets left="5.0" right="5.0" />
                                 </VBox.margin>
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextArea>
                              <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                                 <children>
                                    <Button fx:id="editUserDatabtn" mnemonicParsing="false" onAction="#editUserData" prefHeight="38.0" prefWidth="86.0" style="-fx-border-radius: 8;" styleClass="btnNotification" text="Edit" textFill="#303841">
                                       <font>
                                          <Font name="SansSerif Regular" size="16.0" />
                                       </font>
                                       <cursor>
                                          <Cursor fx:constant="HAND" />
                                       </cursor>
                                    </Button>
                                 </children>
                                 <VBox.margin>
                                    <Insets bottom="15.0" top="5.0" />
                                 </VBox.margin>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </children>
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
            </HBox>
         </children>
      </HBox>
   </content>
</ScrollPane>
