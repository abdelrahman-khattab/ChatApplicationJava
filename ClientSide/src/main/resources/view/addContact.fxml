<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" styleClass="vBox" stylesheets="@Styles/chatStyle.css" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.iti.project.presentation.controllers.AddContactController">
   <children>
      <Label alignment="CENTER" stylesheets="@Styles/chatStyle.css" text="Add Contact" textAlignment="CENTER" textFill="#181d31" VBox.vgrow="ALWAYS">
         <styleClass>
            <String fx:value="headerFont" />
            <String fx:value="vBox" />
         </styleClass>
      </Label>
      <HBox alignment="CENTER" spacing="10.0" styleClass="vBox" stylesheets="@Styles/chatStyle.css" VBox.vgrow="ALWAYS">
         <children>
            <TextField fx:id="phoneNumberTf" styleClass="radius" HBox.hgrow="ALWAYS" />
            <Button fx:id="addContactBtn" mnemonicParsing="false" onAction="#handleAddContactBtn" styleClass="btn" text="Add " />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
      <Label fx:id="errorsLbl" text="erro" textFill="#dcced1" />
   </children>
   <padding>
      <Insets bottom="10.0" top="10.0" />
   </padding>
</VBox>
