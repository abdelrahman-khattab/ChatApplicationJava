<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" styleClass="notificationBg" stylesheets="@Styles/chatStyle.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.iti.project.presentation.controllers.AddContactController">
   <children>
      <Label alignment="CENTER" styleClass="notificationHeader" stylesheets="@Styles/chatStyle.css" text="Add Contact" textAlignment="CENTER" textFill="#181d31" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER" spacing="10.0" stylesheets="@Styles/chatStyle.css" VBox.vgrow="ALWAYS">
         <children>
            <TextField fx:id="phoneNumberTf" promptText="Enter Contatct Number" styleClass="radius" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
               </padding></TextField>
            <Button fx:id="addContactBtn" mnemonicParsing="false" onAction="#handleAddContactBtn" styleClass="btn" text="Add " />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
      <Label fx:id="errorsLbl" text="erro" textFill="#dcced1" />
   </children>
   <padding>
      <Insets bottom="10.0" top="10.0" />
   </padding>
</VBox>
